<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.elvis.comidastipicas.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura"
        android:layout_weight="1"
        android:contentDescription="@string/paisTextViiew"
        android:text="@string/paisTextViiew"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:text="@string/paisTextViiew" />

    <ImageView
        android:layout_width="@dimen/bandeira"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:adjustViewBounds="false"
        android:contentDescription="@string/paisTextViiew"
        android:src="@drawable/band" />

    <ImageView
        android:layout_width="@dimen/bandeira"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:adjustViewBounds="false"
        android:contentDescription="@string/pratoTextView"
        android:cropToPadding="false"
        android:src="@drawable/prato" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura"
        android:layout_weight="1"
        android:contentDescription="@string/pratoTextView"
        android:text="@string/pratoTextView"
        android:textAlignment="center"
        android:textSize="24sp" />

</LinearLayout>
